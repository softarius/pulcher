<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="template">
	<name>Pulcher</name>
	<creationDate>2011-03-11</creationDate>
	<author>Sergey Yushinin</author>
	<authorEmail>sergey@yushinin.ru</authorEmail>
	<authorUrl>http://yushinin.ru</authorUrl>
	<copyright>Sergey Yushinin 2011</copyright>
	<license>GNU/GPL</license>
	<version>1.0</version>
	<description>Softarius pulcher</description>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>assets</folder>
	</files>
	<positions>
		<position>breadcrumb</position>
		<position>left</position>
		<position>right</position>
		<position>top</position>
		<position>center</position>
		<position>footer</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field 
					name="bs_using" 
					type="list" 
					label="TPL_PULCHER_BS_USING"
					description="TPL_PULCHER_BS_USING_DESC"
					default='cdn'
				>
				<option value="cdn">cdn</option>
				<option value="local">local</option>
				<option value="custom">custom</option>
			</field>

			
			</fieldset>
		</fields>
	</config>
</extension>
